<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RecuperacionProgramacion.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RecuperacionProgramacion"
    xmlns:views="clr-namespace:RecuperacionProgramacion.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="RecuperacionProgramacion">

    <TabBar>
        <ShellContent Title="Characters" ContentTemplate="{DataTemplate views:CharactersPage}" />
